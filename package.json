{
  "name": "favicon-thief",
  "version": "1.0.0",
  "description": "Find the best favicon for a given URL.",
  "keywords": [
    "favicon",
    "thief",
    "download",
    "fetch",
    "best",
    "largest",
    "image",
    "file"
  ],
  "engines": {
    "node": ">=16"
  },
  "main": "./build/index.js",
  "license": "MIT",
  "author": {
    "name": "Kamil Mielnik",
    "email": "kamil.adam.mielnik@gmail.com",
    "url": "https://kamilmielnik.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/limesquid/favicon-thief.git"
  },
  "bugs": {
    "url": "https://github.com/limesquid/favicon-thief/issues"
  },
  "homepage": "https://github.com/limesquid/favicon-thief#readme",
  "files": [
    "build/**"
  ],
  "types": "./build/index.d.ts",
  "np": {
    "yarn": false
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "tsc --project .",
    "prettier": "prettier --check src/",
    "prettier:fix": "prettier --write src/",
    "prebuild": "npm run clean",
    "prerelease": "npm run prettier && npm run test && npm run build",
    "release": "np",
    "test": "jest",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:top-500": "NODE_ENV=test node tests/index.js",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "node-fetch": "^2.6.7",
    "probe-image-size": "^7.2.3",
    "url-toolkit": "^2.2.5"
  },
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "@types/node-fetch": "^2.6.2",
    "@types/probe-image-size": "^7.2.0",
    "jest": "^29.3.1",
    "np": "^7.6.2",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  }
}
